DATABASE_URL=postgres://ramekin:ramekin@localhost:54321/ramekin
PORT=3000
UI_PORT=5173
UI_HOSTNAME=localhost
RUST_LOG=info
INSECURE_PASSWORD_HASHING=1

# OpenTelemetry configuration (optional)
# OTLP endpoint (e.g., http://localhost:4317 for local SigNoz)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# For SigNoz Cloud, add your ingestion key:
# OTEL_EXPORTER_OTLP_HEADERS=signoz-ingestion-key=<your-key>
# Service name shown in SigNoz
# OTEL_SERVICE_NAME=ramekin-server-dev

# ACME/Let's Encrypt TLS configuration (optional)
# Enable ACME (presence = enabled)
# ACME_ENABLED=1
# Required when ACME_ENABLED: domain name for the certificate
# ACME_HOSTNAME=api.example.com
# Optional: contact email for Let's Encrypt notifications
# ACME_EMAIL=admin@example.com
# Use Let's Encrypt staging environment (for testing, avoids rate limits)
# ACME_STAGING=1
